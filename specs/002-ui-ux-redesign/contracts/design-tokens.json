{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DesignTokens",
  "description": "Design system tokens for ReqChecker UI",
  "type": "object",
  "properties": {
    "colors": {
      "type": "object",
      "properties": {
        "dark": {
          "type": "object",
          "properties": {
            "backgroundBase": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#0f0f1a" },
            "backgroundSurface": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#1a1a2e" },
            "backgroundElevated": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#252542" },
            "backgroundOverlay": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#2f2f52" },
            "textPrimary": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#ffffff" },
            "textSecondary": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#a0a0b8" },
            "textTertiary": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#6b6b80" },
            "borderSubtle": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#2a2a45" },
            "borderDefault": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#3a3a5c" },
            "borderStrong": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#4a4a6e" }
          },
          "required": ["backgroundBase", "backgroundSurface", "textPrimary"]
        },
        "light": {
          "type": "object",
          "properties": {
            "backgroundBase": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#f8f9fa" },
            "backgroundSurface": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#ffffff" },
            "backgroundElevated": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#ffffff" },
            "backgroundOverlay": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#ffffff" },
            "textPrimary": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#1a1a2e" },
            "textSecondary": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#6b7280" },
            "textTertiary": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#9ca3af" },
            "borderSubtle": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#e5e7eb" },
            "borderDefault": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#d1d5db" },
            "borderStrong": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#9ca3af" }
          },
          "required": ["backgroundBase", "backgroundSurface", "textPrimary"]
        },
        "accent": {
          "type": "object",
          "properties": {
            "primary": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#00d9ff" },
            "secondary": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#6366f1" }
          },
          "required": ["primary", "secondary"]
        },
        "semantic": {
          "type": "object",
          "properties": {
            "success": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#10b981" },
            "warning": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#f59e0b" },
            "error": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#ef4444" },
            "info": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$", "default": "#3b82f6" }
          },
          "required": ["success", "warning", "error", "info"]
        }
      },
      "required": ["dark", "light", "accent", "semantic"]
    },
    "typography": {
      "type": "object",
      "properties": {
        "fontFamily": { "type": "string", "default": "Segoe UI Variable, Segoe UI, sans-serif" },
        "fontFamilyMono": { "type": "string", "default": "Cascadia Code, Consolas, monospace" },
        "scale": {
          "type": "object",
          "properties": {
            "display": { "type": "object", "properties": { "size": { "type": "integer", "default": 32 }, "weight": { "type": "integer", "default": 600 }, "lineHeight": { "type": "number", "default": 1.2 } } },
            "h1": { "type": "object", "properties": { "size": { "type": "integer", "default": 24 }, "weight": { "type": "integer", "default": 600 }, "lineHeight": { "type": "number", "default": 1.25 } } },
            "h2": { "type": "object", "properties": { "size": { "type": "integer", "default": 20 }, "weight": { "type": "integer", "default": 600 }, "lineHeight": { "type": "number", "default": 1.3 } } },
            "h3": { "type": "object", "properties": { "size": { "type": "integer", "default": 16 }, "weight": { "type": "integer", "default": 600 }, "lineHeight": { "type": "number", "default": 1.4 } } },
            "body": { "type": "object", "properties": { "size": { "type": "integer", "default": 14 }, "weight": { "type": "integer", "default": 400 }, "lineHeight": { "type": "number", "default": 1.5 } } },
            "caption": { "type": "object", "properties": { "size": { "type": "integer", "default": 12 }, "weight": { "type": "integer", "default": 400 }, "lineHeight": { "type": "number", "default": 1.4 } } },
            "tiny": { "type": "object", "properties": { "size": { "type": "integer", "default": 11 }, "weight": { "type": "integer", "default": 400 }, "lineHeight": { "type": "number", "default": 1.3 } } }
          }
        }
      },
      "required": ["fontFamily", "scale"]
    },
    "spacing": {
      "type": "object",
      "properties": {
        "xs": { "type": "integer", "default": 4 },
        "sm": { "type": "integer", "default": 8 },
        "md": { "type": "integer", "default": 12 },
        "base": { "type": "integer", "default": 16 },
        "lg": { "type": "integer", "default": 24 },
        "xl": { "type": "integer", "default": 32 },
        "xxl": { "type": "integer", "default": 48 }
      },
      "required": ["xs", "sm", "md", "base", "lg", "xl", "xxl"]
    },
    "borderRadius": {
      "type": "object",
      "properties": {
        "sm": { "type": "integer", "default": 4 },
        "md": { "type": "integer", "default": 8 },
        "lg": { "type": "integer", "default": 12 },
        "xl": { "type": "integer", "default": 16 },
        "full": { "type": "integer", "default": 9999 }
      },
      "required": ["sm", "md", "lg", "full"]
    },
    "animation": {
      "type": "object",
      "properties": {
        "duration": {
          "type": "object",
          "properties": {
            "instant": { "type": "integer", "default": 0 },
            "fast": { "type": "integer", "default": 100 },
            "normal": { "type": "integer", "default": 200 },
            "slow": { "type": "integer", "default": 300 },
            "slower": { "type": "integer", "default": 400 }
          }
        },
        "easing": {
          "type": "object",
          "properties": {
            "easeOut": { "type": "string", "default": "cubic-bezier(0, 0, 0.2, 1)" },
            "easeIn": { "type": "string", "default": "cubic-bezier(0.4, 0, 1, 1)" },
            "easeInOut": { "type": "string", "default": "cubic-bezier(0.4, 0, 0.2, 1)" },
            "spring": { "type": "string", "default": "cubic-bezier(0.34, 1.56, 0.64, 1)" }
          }
        }
      },
      "required": ["duration", "easing"]
    },
    "sidebar": {
      "type": "object",
      "properties": {
        "widthCollapsed": { "type": "integer", "default": 72 },
        "widthExpanded": { "type": "integer", "default": 240 },
        "itemHeight": { "type": "integer", "default": 48 },
        "iconSize": { "type": "integer", "default": 24 },
        "activeIndicatorWidth": { "type": "integer", "default": 3 }
      },
      "required": ["widthCollapsed", "widthExpanded"]
    },
    "progressRing": {
      "type": "object",
      "properties": {
        "size": { "type": "integer", "default": 120 },
        "strokeWidth": { "type": "integer", "default": 8 }
      },
      "required": ["size", "strokeWidth"]
    }
  },
  "required": ["colors", "typography", "spacing", "borderRadius", "animation"]
}
