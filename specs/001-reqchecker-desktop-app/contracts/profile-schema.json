{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://reqchecker.example.com/schemas/profile.json",
  "title": "ReqChecker Profile",
  "description": "Configuration profile for ReqChecker environment readiness tests",
  "type": "object",
  "required": ["id", "name", "schemaVersion", "runSettings", "tests"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique profile identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable profile name"
    },
    "schemaVersion": {
      "type": "integer",
      "minimum": 1,
      "description": "Schema version for migration support"
    },
    "runSettings": {
      "$ref": "#/$defs/runSettings"
    },
    "tests": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/testDefinition"
      },
      "description": "Ordered list of tests to execute"
    }
  },
  "$defs": {
    "runSettings": {
      "type": "object",
      "properties": {
        "defaultTimeout": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 300000,
          "default": 30000,
          "description": "Default timeout in milliseconds"
        },
        "defaultRetryCount": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "default": 3,
          "description": "Default retry attempts"
        },
        "retryBackoff": {
          "type": "string",
          "enum": ["None", "Linear", "Exponential"],
          "default": "Exponential",
          "description": "Retry delay strategy"
        },
        "adminBehavior": {
          "type": "string",
          "enum": ["SkipWithReason", "PromptForElevation", "FailImmediately"],
          "default": "SkipWithReason",
          "description": "How to handle tests requiring admin privileges"
        }
      }
    },
    "testDefinition": {
      "type": "object",
      "required": ["id", "type", "displayName", "parameters"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "description": "Unique test identifier within profile"
        },
        "type": {
          "type": "string",
          "enum": [
            "Ping",
            "HttpGet",
            "HttpPost",
            "FtpRead",
            "FtpWrite",
            "FileExists",
            "DirectoryExists",
            "FileRead",
            "FileWrite",
            "ProcessList",
            "RegistryRead"
          ],
          "description": "Test type identifier"
        },
        "displayName": {
          "type": "string",
          "minLength": 1,
          "description": "User-facing test name"
        },
        "description": {
          "type": "string",
          "description": "Optional help text"
        },
        "parameters": {
          "type": "object",
          "description": "Type-specific test parameters"
        },
        "fieldPolicy": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "enum": ["Locked", "Editable", "Hidden", "PromptAtRun"]
          },
          "description": "Per-field editability rules using dot-path keys"
        },
        "timeout": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 300000,
          "description": "Override default timeout (ms)"
        },
        "retryCount": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "Override default retry count"
        },
        "requiresAdmin": {
          "type": "boolean",
          "default": false,
          "description": "Whether test requires elevation"
        }
      }
    },
    "httpGetParameters": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "expectedStatusCodes": {
          "type": "array",
          "items": { "type": "integer" },
          "default": [200]
        },
        "headers": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "validateSsl": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "httpPostParameters": {
      "allOf": [
        { "$ref": "#/$defs/httpGetParameters" },
        {
          "type": "object",
          "properties": {
            "body": { "type": "string" },
            "contentType": {
              "type": "string",
              "default": "application/json"
            }
          }
        }
      ]
    },
    "pingParameters": {
      "type": "object",
      "required": ["host"],
      "properties": {
        "host": { "type": "string" },
        "timeout": { "type": "integer", "default": 10000 },
        "ttl": { "type": "integer", "default": 128 }
      }
    },
    "ftpParameters": {
      "type": "object",
      "required": ["host", "remotePath"],
      "properties": {
        "host": { "type": "string" },
        "port": { "type": "integer", "default": 21 },
        "remotePath": { "type": "string" },
        "localPath": { "type": "string" },
        "credentialRef": { "type": "string" },
        "useTls": { "type": "boolean", "default": true },
        "passiveMode": { "type": "boolean", "default": true }
      }
    },
    "filePathParameters": {
      "type": "object",
      "required": ["path"],
      "properties": {
        "path": { "type": "string" }
      }
    },
    "fileWriteParameters": {
      "type": "object",
      "required": ["path", "content"],
      "properties": {
        "path": { "type": "string" },
        "content": { "type": "string" }
      }
    },
    "processListParameters": {
      "type": "object",
      "required": ["processNames"],
      "properties": {
        "processNames": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "matchAll": { "type": "boolean", "default": false }
      }
    },
    "registryReadParameters": {
      "type": "object",
      "required": ["keyPath"],
      "properties": {
        "keyPath": { "type": "string" },
        "valueName": { "type": "string" },
        "expectedValue": { "type": "string" }
      }
    }
  }
}
