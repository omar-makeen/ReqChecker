<Page x:Class="ReqChecker.App.Views.TestConfigView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:ReqChecker.App.Converters"
      xmlns:controls="clr-namespace:ReqChecker.App.Controls"
      xmlns:viewmodels="clr-namespace:ReqChecker.App.ViewModels"
      mc:Ignorable="d"
      Background="{DynamicResource BackgroundBase}"
      FocusManager.FocusedElement="{Binding ElementName=BackButton}">

    <Page.Resources>
        <converters:FieldPolicyToVisibilityConverter x:Key="FieldPolicyToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Staggered entrance animation for sections -->
        <Style x:Key="AnimatedSection" TargetType="Border">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="20"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                             From="20" To="0"
                                             Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="24" KeyboardNavigation.TabNavigation="Once" KeyboardNavigation.DirectionalNavigation="Cycle">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Style="{StaticResource GhostButton}"
                    Command="{Binding BackCommand}"
                    TabIndex="1"
                    Margin="0,0,16,0">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="ArrowLeft24" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Back"/>
                </StackPanel>
            </Button>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <ui:SymbolIcon Symbol="Settings24"
                               FontSize="24"
                               Foreground="{DynamicResource AccentPrimary}"
                               Margin="0,0,12,0"/>
                <TextBlock Text="Test Configuration"
                           Style="{DynamicResource TextH1}"
                           Foreground="{DynamicResource TextPrimary}"/>
            </StackPanel>
        </Grid>

        <!-- Test Configuration Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel MaxWidth="800">

                <!-- Basic Information Section -->
                <Border Style="{StaticResource AnimatedSection}">
                    <Border Style="{StaticResource ParameterGroupCard}">
                        <StackPanel>
                            <!-- Section Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="{DynamicResource AccentPrimary}"
                                        CornerRadius="6"
                                        Width="24" Height="24"
                                        Margin="0,0,12,0">
                                    <ui:SymbolIcon Symbol="Info24"
                                                   FontSize="14"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Basic Information"
                                           Style="{DynamicResource TextH3}"
                                           Foreground="{DynamicResource TextPrimary}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Test Name (Locked) -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Name"
                                           Style="{DynamicResource TextBody}"
                                           Foreground="{DynamicResource TextSecondary}"
                                           VerticalAlignment="Center"/>
                                <controls:LockedFieldControl Grid.Column="1" Value="{Binding TestName}"/>
                            </Grid>

                            <!-- Test Type (Locked) -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Type"
                                           Style="{DynamicResource TextBody}"
                                           Foreground="{DynamicResource TextSecondary}"
                                           VerticalAlignment="Center"/>
                                <controls:LockedFieldControl Grid.Column="1" Value="{Binding TestType}"/>
                            </Grid>

                            <!-- Requires Admin (Locked) -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Requires Admin"
                                           Style="{DynamicResource TextBody}"
                                           Foreground="{DynamicResource TextSecondary}"
                                           VerticalAlignment="Center"/>
                                <controls:LockedFieldControl Grid.Column="1" Value="{Binding RequiresAdminText}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Border>

                <!-- Execution Settings Section -->
                <Border Style="{StaticResource AnimatedSection}">
                    <Border Style="{StaticResource ParameterGroupCard}">
                        <StackPanel>
                            <!-- Section Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="{DynamicResource AccentSecondary}"
                                        CornerRadius="6"
                                        Width="24" Height="24"
                                        Margin="0,0,12,0">
                                    <ui:SymbolIcon Symbol="Timer24"
                                                   FontSize="14"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Execution Settings"
                                           Style="{DynamicResource TextH3}"
                                           Foreground="{DynamicResource TextPrimary}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Timeout -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Content="_Timeout (ms)"
                                       Style="{DynamicResource TextBody}"
                                       Foreground="{DynamicResource TextSecondary}"
                                       VerticalAlignment="Center"
                                       Target="TimeoutTextBox"/>
                                 <TextBox x:Name="TimeoutTextBox"
                                          Grid.Column="1"
                                          Style="{StaticResource InputField}"
                                          Text="{Binding Timeout, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True}"
                                          TabIndex="2"/>
                            </Grid>

                            <!-- Retries -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Content="_Retries"
                                       Style="{DynamicResource TextBody}"
                                       Foreground="{DynamicResource TextSecondary}"
                                       VerticalAlignment="Center"
                                       Target="RetryCountTextBox"/>
                                 <TextBox x:Name="RetryCountTextBox"
                                          Grid.Column="1"
                                          Style="{StaticResource InputField}"
                                          Text="{Binding RetryCount, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True}"
                                          TabIndex="3"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Border>

                <!-- Test Parameters Section -->
                <Border Style="{StaticResource AnimatedSection}">
                    <Border Style="{StaticResource ParameterGroupCard}">
                        <StackPanel>
                            <!-- Section Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="{DynamicResource StatusPass}"
                                        CornerRadius="6"
                                        Width="24" Height="24"
                                        Margin="0,0,12,0">
                                    <ui:SymbolIcon Symbol="SlideSettings24"
                                                   FontSize="14"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Test Parameters"
                                           Style="{DynamicResource TextH3}"
                                           Foreground="{DynamicResource TextPrimary}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding Parameters}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,12"
                                              Visibility="{Binding Policy, Converter={StaticResource FieldPolicyToVisibilityConverter}}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Field Label -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Label}"
                                                       Style="{DynamicResource TextBody}"
                                                       Foreground="{DynamicResource TextSecondary}"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Label}"
                                                       MaxWidth="110"/>

                                            <!-- Editable Field -->
                                            <TextBox Grid.Column="1"
                                                     Style="{StaticResource InputField}"
                                                     Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                     Visibility="{Binding IsEditable, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                            <!-- Locked Field -->
                                            <controls:LockedFieldControl Grid.Column="1"
                                                                         Value="{Binding Value}"
                                                                         Visibility="{Binding IsLocked, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                            <!-- Prompt At Run Field -->
                                            <Border Grid.Column="1"
                                                    Style="{StaticResource PromptAtRunIndicator}"
                                                    Visibility="{Binding IsPromptAtRun, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <StackPanel Orientation="Horizontal">
                                                    <ui:SymbolIcon Symbol="Key24"
                                                                   FontSize="16"
                                                                   Foreground="White"
                                                                   Margin="0,0,10,0"/>
                                                    <TextBlock Text="Will be prompted during test execution"
                                                               Foreground="White"
                                                               FontStyle="Italic"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Empty State for Parameters -->
                            <Border Visibility="{Binding Parameters.Count, Converter={StaticResource CountToVisibilityConverter}}"
                                    Background="{DynamicResource BackgroundElevated}"
                                    CornerRadius="8"
                                    Padding="24"
                                    HorizontalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center">
                                    <ui:SymbolIcon Symbol="DocumentBulletList24"
                                                   FontSize="32"
                                                   Foreground="{DynamicResource TextTertiary}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,12"/>
                                    <TextBlock Text="No parameters defined for this test"
                                               Style="{DynamicResource TextBody}"
                                               Foreground="{DynamicResource TextTertiary}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource BackgroundSurface}"
                BorderBrush="{DynamicResource BorderSubtle}"
                BorderThickness="0,1,0,0"
                Margin="-24,16,-24,-24"
                Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel on the left -->
                <Button Grid.Column="0"
                        Style="{StaticResource GhostButton}"
                        Content="Cancel"
                        Command="{Binding CancelCommand}"
                        HorizontalAlignment="Left"
                        TabIndex="99"/>

                <!-- Save on the right -->
                <Button Grid.Column="1"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding SaveCommand}"
                        TabIndex="100"
                        IsDefault="True">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Save24" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Save Changes"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
