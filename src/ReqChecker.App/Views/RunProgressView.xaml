<Page x:Class="ReqChecker.App.Views.RunProgressView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:controls="clr-namespace:ReqChecker.App.Controls"
      mc:Ignorable="d"
      Background="{DynamicResource BackgroundBase}"
      FocusManager.FocusedElement="{Binding ElementName=CancelButton}">

    <Page.Resources>
        <!-- Staggered item entrance style trigger -->
        <Style x:Key="AnimatedTestResultItem" TargetType="Border">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="30"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                             From="30" To="0"
                                             Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource AnimatedPageHeader}" Margin="0,0,0,24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Gradient Accent Line -->
                <Border Grid.Row="0" Height="4"
                        Background="{DynamicResource AccentGradientHorizontal}"
                        CornerRadius="2"/>

                <!-- Header Content -->
                <Grid Grid.Row="1" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon Container -->
                    <Border Grid.Column="0" Width="48" Height="48"
                            Background="{DynamicResource AccentPrimary}"
                            CornerRadius="12" Margin="0,0,16,0">
                        <ui:SymbolIcon Symbol="Play24"
                                       FontSize="24"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title + Subtitle -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Test Execution"
                                   FontSize="24" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"/>
                        <TextBlock Text="{Binding HeaderSubtitle}"
                                   Style="{DynamicResource TextBody}"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <!-- Cancel button - shown when running -->
                        <Button x:Name="CancelButton"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding CancelCommand}"
                                IsEnabled="{Binding IsRunning}"
                                IsCancel="True"
                                TabIndex="1"
                                Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Dismiss24" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Cancel">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCancelling}" Value="True">
                                                    <Setter Property="Text" Value="Cancelling..."/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>

                        <!-- Navigation buttons - shown when complete or cancelled -->
                        <StackPanel Orientation="Horizontal"
                                   Visibility="{Binding IsComplete, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button Style="{StaticResource PrimaryButton}"
                                    Command="{Binding NavigateToTestListCommand}"
                                    TabIndex="1"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="ArrowLeft24" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="Back to Tests"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource SecondaryButton}"
                                    Command="{Binding ViewResultsCommand}"
                                    TabIndex="2">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="DataHistogram24" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="View Results"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="400"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Progress Ring and Current Test -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Progress Ring -->
                <controls:ProgressRing x:Name="MainProgressRing"
                                       Width="160"
                                       Height="160"
                                       Progress="{Binding ProgressPercentage}"
                                       Label="Complete"
                                       ShowPercentage="True"
                                       HorizontalAlignment="Center">
                    <controls:ProgressRing.Effect>
                        <DropShadowEffect Color="#00d9ff"
                                          BlurRadius="15"
                                          ShadowDepth="0"
                                          Opacity="0.3"/>
                    </controls:ProgressRing.Effect>
                </controls:ProgressRing>

                <!-- Current Test Card -->
                <Border Style="{StaticResource Card}"
                        Margin="0,32,0,0"
                        MinWidth="300"
                        Visibility="{Binding IsTestRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Currently Running"
                                   Style="{DynamicResource TextCaption}"
                                   Foreground="{DynamicResource TextTertiary}"
                                   Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Animated spinner -->
                            <ui:SymbolIcon Grid.Column="0"
                                           Symbol="ArrowSync24"
                                           FontSize="20"
                                           Foreground="{DynamicResource AccentPrimary}"
                                           Margin="0,0,12,0"
                                           RenderTransformOrigin="0.5,0.5">
                                <ui:SymbolIcon.RenderTransform>
                                    <RotateTransform x:Name="SpinnerRotation"/>
                                </ui:SymbolIcon.RenderTransform>
                                <ui:SymbolIcon.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                                 Storyboard.TargetProperty="Angle"
                                                                 From="0" To="360"
                                                                 Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </ui:SymbolIcon.Triggers>
                            </ui:SymbolIcon>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding CurrentTestName, FallbackValue='Waiting...'}"
                                       Style="{DynamicResource TextBody}"
                                       Foreground="{DynamicResource TextPrimary}"
                                       FontWeight="Medium"
                                       TextTrimming="CharacterEllipsis"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Completion Summary Card -->
                <Border Style="{StaticResource Card}"
                        Margin="0,32,0,0"
                        MinWidth="300"
                        Visibility="{Binding IsComplete, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center">
                        <ui:SymbolIcon Symbol="CheckmarkCircle24"
                                       FontSize="48"
                                       Foreground="{DynamicResource StatusPass}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                        <TextBlock Text="All tests completed"
                                   Style="{DynamicResource TextH3}"
                                   Foreground="{DynamicResource TextPrimary}"
                                   HorizontalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalTests, StringFormat='{}{0} tests executed'}"
                                   Style="{DynamicResource TextCaption}"
                                   Foreground="{DynamicResource TextSecondary}"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Stats Summary -->
                <Grid Margin="0,24,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Passed -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CompletedTests}"
                                   Style="{DynamicResource TextH2}"
                                   Foreground="{DynamicResource StatusPass}"
                                   HorizontalAlignment="Center"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Passed"
                                   Style="{DynamicResource TextCaption}"
                                   Foreground="{DynamicResource TextSecondary}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Failed -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding FailedTests}"
                                   Style="{DynamicResource TextH2}"
                                   Foreground="{DynamicResource StatusFail}"
                                   HorizontalAlignment="Center"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Failed"
                                   Style="{DynamicResource TextCaption}"
                                   Foreground="{DynamicResource TextSecondary}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Skipped -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding SkippedTests}"
                                   Style="{DynamicResource TextH2}"
                                   Foreground="{DynamicResource StatusSkip}"
                                   HorizontalAlignment="Center"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Skipped"
                                   Style="{DynamicResource TextCaption}"
                                   Foreground="{DynamicResource TextSecondary}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Divider -->
            <Border Grid.Column="1"
                    Width="1"
                    Background="{DynamicResource BorderSubtle}"
                    VerticalAlignment="Stretch"
                    Margin="0,40"/>

            <!-- Right: Completed Tests List -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- List Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                    <ui:SymbolIcon Symbol="TaskListLtr24"
                                   FontSize="20"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,0,8,0"/>
                    <TextBlock Text="Completed Tests"
                               Style="{DynamicResource TextH3}"
                               Foreground="{DynamicResource TextPrimary}"/>
                    <Border Background="{DynamicResource BackgroundElevated}"
                            CornerRadius="10"
                            Padding="8,2"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding TestResults.Count}"
                                   Style="{DynamicResource TextCaption}"
                                   Foreground="{DynamicResource TextSecondary}"/>
                    </Border>
                </StackPanel>

                <!-- Test Results List -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding TestResults}"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource AnimatedTestResultItem}"
                                        Background="{DynamicResource BackgroundSurface}"
                                        BorderBrush="{Binding Status, Converter={StaticResource TestStatusToColorConverter}}"
                                        BorderThickness="4,1,1,1"
                                        CornerRadius="8"
                                        Padding="16,12"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Test Info -->
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DisplayName}"
                                                       Style="{DynamicResource TextBody}"
                                                       Foreground="{DynamicResource TextPrimary}"
                                                       FontWeight="Medium"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Duration, StringFormat='{}{0:N0}ms'}"
                                                       Style="{DynamicResource TextCaption}"
                                                       Foreground="{DynamicResource TextTertiary}"
                                                       Margin="0,4,0,0"
                                                       Visibility="{Binding Duration, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        </StackPanel>

                                        <!-- Status Badge -->
                                        <controls:TestStatusBadge Grid.Column="1"
                                                                  Status="{Binding Status}"
                                                                  ShowIcon="True"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Right"
                                                                  Margin="12,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty state -->
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TestResults.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                </ScrollViewer>

                <!-- Empty State (when no results yet) -->
                <Border Grid.Row="1"
                        Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"
                        Background="{DynamicResource BackgroundSurface}"
                        BorderBrush="{DynamicResource BorderSubtle}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="32">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="Clock24"
                                       FontSize="48"
                                       Foreground="{DynamicResource TextTertiary}"
                                       HorizontalAlignment="Center"/>
                        <TextBlock Text="Waiting for results..."
                                   Style="{DynamicResource TextBody}"
                                   Foreground="{DynamicResource TextSecondary}"
                                   HorizontalAlignment="Center"
                                   Margin="0,16,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
