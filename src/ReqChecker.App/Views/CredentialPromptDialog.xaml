<Window x:Class="ReqChecker.App.Views.CredentialPromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:ReqChecker.App.Converters"
        mc:Ignorable="d"
        Title="Credential Required"
        Height="350"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FocusManager.FocusedElement="{Binding ElementName=UsernameTextBox}">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20" KeyboardNavigation.TabNavigation="Once" KeyboardNavigation.DirectionalNavigation="Cycle">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Icon -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Border Background="#FFF3E0"
                    CornerRadius="20"
                    Width="40"
                    Height="40"
                    Margin="0,0,15,0">
                <TextBlock Text="ðŸ”‘" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Credential Required" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="{Binding FieldLabel}" FontSize="12" Foreground="#666666" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Credential Reference (if provided) -->
        <Border Grid.Row="1"
                Background="#F5F5F5"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10"
                Visibility="{Binding CredentialRef, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock>
                <Run Text="Credential Reference: " FontWeight="SemiBold"/>
                <Run Text="{Binding CredentialRef}"/>
            </TextBlock>
        </Border>

        <!-- Form Fields -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <!-- Username -->
            <Label Content="_Username" FontWeight="SemiBold" Margin="0,0,0,5" Target="UsernameTextBox"/>
            <TextBox x:Name="UsernameTextBox" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Padding="10"
                     BorderBrush="#DDDDDD"
                     BorderThickness="1"
                     FontSize="14"
                     TabIndex="1"/>

            <!-- Password -->
            <Label Content="_Password" FontWeight="SemiBold" Margin="0,15,0,5" Target="PasswordBox"/>
            <PasswordBox x:Name="PasswordBox"
                        Padding="10"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        FontSize="14"
                        PasswordChanged="PasswordBox_PasswordChanged"
                        TabIndex="2"/>

            <!-- Remember Credentials -->
            <CheckBox Content="Remember credentials"
                     IsChecked="{Binding RememberCredentials}"
                     Margin="0,15,0,0"
                     FontSize="13"
                     TabIndex="3"/>

            <!-- Error Message -->
            <Border Background="#FFEBEE"
                    BorderBrush="#FFC5C5"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,15,0,0"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#B71C1C" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="_Cancel"
                    Command="{Binding CancelCommand}"
                    Margin="0,0,10,0"
                    Padding="20,10"
                    Width="100"
                    Background="#F5F5F5"
                    BorderBrush="#DDDDDD"
                    TabIndex="4"
                    IsCancel="True"/>
            <Button Content="_Submit"
                    Command="{Binding SubmitCommand}"
                    Padding="20,10"
                    Width="100"
                    Background="#0078D4"
                    Foreground="White"
                    TabIndex="5"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
