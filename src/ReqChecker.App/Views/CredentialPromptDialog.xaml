<Window x:Class="ReqChecker.App.Views.CredentialPromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:converters="clr-namespace:ReqChecker.App.Converters"
        mc:Ignorable="d"
        Title="Credential Required"
        Height="420"
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBase}"
        FocusManager.FocusedElement="{Binding ElementName=UsernameTextBox}">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Entrance animation -->
        <Storyboard x:Key="EntranceAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetName="ContentPanel"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="20" To="0"
                             Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource EntranceAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="ContentPanel" Margin="32" KeyboardNavigation.TabNavigation="Once" KeyboardNavigation.DirectionalNavigation="Cycle">
        <Grid.RenderTransform>
            <TranslateTransform Y="0"/>
        </Grid.RenderTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Icon -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24">
            <Border Background="{DynamicResource AccentGradientHorizontal}"
                    CornerRadius="12"
                    Width="48"
                    Height="48"
                    Margin="0,0,16,0">
                <ui:SymbolIcon Symbol="Key24"
                               FontSize="24"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
            </Border>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Credential Required"
                           Style="{DynamicResource TextH2}"
                           Foreground="{DynamicResource TextPrimary}"/>
                <TextBlock Text="{Binding FieldLabel}"
                           Style="{DynamicResource TextCaption}"
                           Foreground="{DynamicResource TextTertiary}"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Credential Reference (if provided) -->
        <Border Grid.Row="1"
                Background="{DynamicResource BackgroundElevated}"
                BorderBrush="{DynamicResource BorderSubtle}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16,12"
                Margin="0,0,0,20"
                Visibility="{Binding CredentialRef, Converter={StaticResource NullToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="Info24"
                               FontSize="16"
                               Foreground="{DynamicResource AccentPrimary}"
                               Margin="0,0,12,0"/>
                <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource TextSecondary}">
                    <Run Text="Reference: " FontWeight="Medium"/>
                    <Run Text="{Binding CredentialRef}" Foreground="{DynamicResource TextPrimary}"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Form Fields -->
        <StackPanel Grid.Row="2">
            <!-- Username -->
            <StackPanel Margin="0,0,0,16">
                <Label Content="_Username"
                       Foreground="{DynamicResource TextSecondary}"
                       FontSize="13"
                       FontWeight="Medium"
                       Margin="0,0,0,8"
                       Target="UsernameTextBox"/>
                <TextBox x:Name="UsernameTextBox"
                         Style="{StaticResource CredentialInput}"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         TabIndex="1"/>
            </StackPanel>

            <!-- Password -->
            <StackPanel Margin="0,0,0,16">
                <Label Content="_Password"
                       Foreground="{DynamicResource TextSecondary}"
                       FontSize="13"
                       FontWeight="Medium"
                       Margin="0,0,0,8"
                       Target="PasswordBox"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource CredentialPasswordBox}"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             TabIndex="2"/>
            </StackPanel>

            <!-- Remember Credentials -->
            <CheckBox Style="{StaticResource CredentialCheckBox}"
                      Content="Remember credentials for this session"
                      IsChecked="{Binding RememberCredentials}"
                      TabIndex="3"/>

            <!-- Error Message -->
            <Border Background="#1AEF4444"
                    BorderBrush="{DynamicResource StatusFail}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16,12"
                    Margin="0,16,0,0"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="ErrorCircle24"
                                   FontSize="18"
                                   Foreground="{DynamicResource StatusFail}"
                                   Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="{DynamicResource StatusFail}"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="CancelButton"
                    Grid.Column="1"
                    Style="{StaticResource GhostButton}"
                    Content="Cancel"
                    MinWidth="100"
                    TabIndex="4"
                    IsCancel="True"
                    Margin="0,0,8,0"/>

            <Button x:Name="SubmitButton"
                    Grid.Column="2"
                    Style="{StaticResource PrimaryButton}"
                    MinWidth="100"
                    TabIndex="5"
                    IsDefault="True">
                <StackPanel Orientation="Horizontal" IsHitTestVisible="False">
                    <ui:SymbolIcon Symbol="Checkmark24" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Submit"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
