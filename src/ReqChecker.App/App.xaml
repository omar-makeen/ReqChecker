<Application x:Class="ReqChecker.App.App"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
              xmlns:local="clr-namespace:ReqChecker.App"
              xmlns:converters="clr-namespace:ReqChecker.App.Converters"
              xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- WPF-UI Base Resources (theme applied dynamically by ThemeService) -->
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />

                <!-- ReqChecker Design System (Colors loaded dynamically by ThemeService) -->
                <ResourceDictionary Source="Resources/Styles/Typography.xaml" />
                <ResourceDictionary Source="Resources/Styles/Spacing.xaml" />
                <ResourceDictionary Source="Resources/Styles/Animations.xaml" />
                <ResourceDictionary Source="Resources/Styles/Controls.xaml" />
                <ResourceDictionary Source="Resources/Styles/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:TestStatusToColorConverter x:Key="TestStatusToColorConverter" />
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <converters:EnumToBoolConverter x:Key="EnumToBoolConverter" />
            <converters:TestResultSummaryConverter x:Key="TestResultSummaryConverter" />
            <converters:TestResultDetailsConverter x:Key="TestResultDetailsConverter" />
            <converters:CredentialMaskConverter x:Key="CredentialMaskConverter" />
            <converters:ChainedConverter x:Key="TechnicalDetailsConverter"
                                            FirstConverter="{StaticResource TestResultDetailsConverter}"
                                            SecondConverter="{StaticResource CredentialMaskConverter}" />
            <converters:DurationFormatConverter x:Key="DurationFormatConverter" />
            <converters:FriendlyDateConverter x:Key="FriendlyDateConverter" />
            <converters:PassRateToBrushConverter x:Key="PassRateToBrushConverter" />
            <converters:RetryCountVisibilityConverter x:Key="RetryCountVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
