<ui:FluentWindow x:Class="ReqChecker.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="ReqChecker"
        Height="700"
        Width="1100"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="None"
        WindowCornerPreference="Round"
        Background="{DynamicResource BackgroundBase}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <ui:TitleBar
            x:Name="TitleBar"
            Grid.Row="0"
            Title="ReqChecker"
            ShowMaximize="True"
            ShowMinimize="True"
            CanMaximize="True">
            <ui:TitleBar.Header>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                    <ui:SymbolIcon Symbol="CheckmarkCircle24" FontSize="18" Foreground="{DynamicResource AccentPrimaryBrush}"/>
                    <TextBlock Text="ReqChecker" Margin="8,0,0,0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
            </ui:TitleBar.Header>
        </ui:TitleBar>

        <!-- Main Content with Navigation -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <ui:NavigationView
                x:Name="NavigationView"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                IsPaneOpen="{Binding IsSidebarExpanded, Mode=TwoWay}"
                PaneDisplayMode="Left"
                OpenPaneLength="240"
                CompactPaneLength="72"
                IsBackButtonVisible="Collapsed"
                IsPaneToggleVisible="True"
                PaneTitle="Navigation"
                SelectionChanged="NavigationView_SelectionChanged"
                Background="{DynamicResource BackgroundBase}"
                Foreground="{DynamicResource TextPrimary}">

                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem
                        x:Name="NavProfiles"
                        Content="Profiles"
                        Tag="Profiles"
                        Icon="{ui:SymbolIcon FolderOpen24}"
                        ToolTipService.ShowOnDisabled="True"
                        ToolTipService.InitialShowDelay="400"
                        ToolTipService.Placement="Right">
                        <ui:NavigationViewItem.ToolTip>
                            <ToolTip Style="{StaticResource ModernToolTip}" Content="Select and manage profiles"/>
                        </ui:NavigationViewItem.ToolTip>
                    </ui:NavigationViewItem>
                    <ui:NavigationViewItem
                        x:Name="NavTests"
                        Content="Tests"
                        Tag="Tests"
                        Icon="{ui:SymbolIcon Beaker24}"
                        IsActive="True"
                        ToolTipService.ShowOnDisabled="True"
                        ToolTipService.InitialShowDelay="400"
                        ToolTipService.Placement="Right">
                        <ui:NavigationViewItem.ToolTip>
                            <ToolTip Style="{StaticResource ModernToolTip}" Content="Configure and run tests"/>
                        </ui:NavigationViewItem.ToolTip>
                    </ui:NavigationViewItem>
                    <ui:NavigationViewItem
                        x:Name="NavResults"
                        Content="Results"
                        Tag="Results"
                        Icon="{ui:SymbolIcon DataBarVertical24}"
                        ToolTipService.ShowOnDisabled="True"
                        ToolTipService.InitialShowDelay="400"
                        ToolTipService.Placement="Right">
                        <ui:NavigationViewItem.ToolTip>
                            <ToolTip Style="{StaticResource ModernToolTip}" Content="View test results"/>
                        </ui:NavigationViewItem.ToolTip>
                    </ui:NavigationViewItem>
                    <ui:NavigationViewItem
                        x:Name="NavDiagnostics"
                        Content="Diagnostics"
                        Tag="Diagnostics"
                        Icon="{ui:SymbolIcon Bug24}"
                        ToolTipService.ShowOnDisabled="True"
                        ToolTipService.InitialShowDelay="400"
                        ToolTipService.Placement="Right">
                        <ui:NavigationViewItem.ToolTip>
                            <ToolTip Style="{StaticResource ModernToolTip}" Content="View diagnostic information"/>
                        </ui:NavigationViewItem.ToolTip>
                    </ui:NavigationViewItem>
                </ui:NavigationView.MenuItems>

                <ui:NavigationView.FooterMenuItems>
                    <ui:NavigationViewItem
                        x:Name="NavTheme"
                        Content="{Binding DataContext.ThemeLabel, RelativeSource={RelativeSource AncestorType=Window}}"
                        Tag="Theme"
                        Icon="{ui:SymbolIcon WeatherMoon24}"
                        ToolTipService.ShowOnDisabled="True"
                        ToolTipService.InitialShowDelay="400"
                        ToolTipService.Placement="Right">
                        <ui:NavigationViewItem.ToolTip>
                            <ToolTip Style="{StaticResource ModernToolTip}" Content="Toggle dark/light theme"/>
                        </ui:NavigationViewItem.ToolTip>
                    </ui:NavigationViewItem>
                </ui:NavigationView.FooterMenuItems>

                <!-- Content Frame (inside NavigationView for proper layout) -->
                <ui:NavigationView.ContentOverlay>
                    <Grid>
                        <Frame
                            x:Name="ContentFrame"
                            NavigationUIVisibility="Hidden"
                            Background="Transparent">
                            <Frame.RenderTransform>
                                <TranslateTransform/>
                            </Frame.RenderTransform>
                        </Frame>
                    </Grid>
                </ui:NavigationView.ContentOverlay>
            </ui:NavigationView>
        </Grid>

        <!-- Status Bar -->
        <Border
            Grid.Row="2"
            Background="{DynamicResource BackgroundSurface}"
            BorderBrush="{DynamicResource BorderSubtle}"
            BorderThickness="0,1,0,0"
            Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Version Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock
                        Text="v1.0.0"
                        Style="{DynamicResource TextCaption}"
                        Foreground="{DynamicResource TextTertiary}"
                        VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Profile Name (center) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ui:SymbolIcon
                        Symbol="Document24"
                        FontSize="12"
                        Foreground="{DynamicResource TextTertiary}"
                        Margin="0,0,6,0"
                        Visibility="{Binding DataContext.HasProfile, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <TextBlock
                        Text="{Binding DataContext.ProfileName, RelativeSource={RelativeSource AncestorType=Window}, FallbackValue='No profile loaded'}"
                        Style="{DynamicResource TextCaption}"
                        Foreground="{DynamicResource TextSecondary}"
                        VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Theme Toggle and Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Theme Toggle Button -->
                    <Button x:Name="ThemeToggleButton"
                            Style="{StaticResource IconButton}"
                            Command="{Binding DataContext.ThemeService.ToggleThemeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            ToolTip="Toggle dark/light theme"
                            Width="32"
                            Height="32"
                            Margin="0,0,12,0">
                        <ui:SymbolIcon Symbol="{Binding DataContext.ThemeIcon, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="16"/>
                    </Button>

                    <!-- Status Indicator -->
                    <Border Background="{DynamicResource StatusPass}"
                            CornerRadius="4"
                            Padding="8,4"
                            Opacity="0.9">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="6" Height="6"
                                     Fill="White"
                                     VerticalAlignment="Center"
                                     Margin="0,0,6,0"/>
                            <TextBlock Text="Ready"
                                       FontSize="11"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>
