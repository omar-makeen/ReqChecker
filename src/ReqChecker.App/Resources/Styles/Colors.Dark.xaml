<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ReqChecker Premium Dark Theme Color Tokens -->
    <!-- Based on design-tokens.json specification -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundBaseColor">#0f0f1a</Color>
    <Color x:Key="BackgroundSurfaceColor">#1a1a2e</Color>
    <Color x:Key="BackgroundElevatedColor">#252542</Color>
    <Color x:Key="BackgroundOverlayColor">#2f2f52</Color>

    <SolidColorBrush x:Key="BackgroundBase" Color="{StaticResource BackgroundBaseColor}"/>
    <SolidColorBrush x:Key="BackgroundSurface" Color="{StaticResource BackgroundSurfaceColor}"/>
    <SolidColorBrush x:Key="BackgroundElevated" Color="{StaticResource BackgroundElevatedColor}"/>
    <SolidColorBrush x:Key="BackgroundOverlay" Color="{StaticResource BackgroundOverlayColor}"/>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#ffffff</Color>
    <Color x:Key="TextSecondaryColor">#a0a0b8</Color>
    <Color x:Key="TextTertiaryColor">#6b6b80</Color>

    <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondary" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiary" Color="{StaticResource TextTertiaryColor}"/>

    <!-- Border Colors -->
    <Color x:Key="BorderSubtleColor">#2a2a45</Color>
    <Color x:Key="BorderDefaultColor">#3a3a5c</Color>
    <Color x:Key="BorderStrongColor">#4a4a6e</Color>

    <SolidColorBrush x:Key="BorderSubtle" Color="{StaticResource BorderSubtleColor}"/>
    <SolidColorBrush x:Key="BorderDefault" Color="{StaticResource BorderDefaultColor}"/>
    <SolidColorBrush x:Key="BorderStrong" Color="{StaticResource BorderStrongColor}"/>

    <!-- Accent Colors (shared across themes) -->
    <Color x:Key="AccentPrimaryColor">#00d9ff</Color>
    <Color x:Key="AccentSecondaryColor">#6366f1</Color>

    <SolidColorBrush x:Key="AccentPrimary" Color="{StaticResource AccentPrimaryColor}"/>
    <SolidColorBrush x:Key="AccentSecondary" Color="{StaticResource AccentSecondaryColor}"/>

    <!-- Accent Gradient -->
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AccentPrimaryColor}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentSecondaryColor}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentGradientHorizontal" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="{StaticResource AccentPrimaryColor}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentSecondaryColor}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Semantic Colors (Status) -->
    <Color x:Key="StatusPassColor">#10b981</Color>
    <Color x:Key="StatusFailColor">#ef4444</Color>
    <Color x:Key="StatusSkipColor">#f59e0b</Color>
    <Color x:Key="StatusInfoColor">#3b82f6</Color>

    <SolidColorBrush x:Key="StatusPass" Color="{StaticResource StatusPassColor}"/>
    <SolidColorBrush x:Key="StatusFail" Color="{StaticResource StatusFailColor}"/>
    <SolidColorBrush x:Key="StatusSkip" Color="{StaticResource StatusSkipColor}"/>
    <SolidColorBrush x:Key="StatusInfo" Color="{StaticResource StatusInfoColor}"/>

    <!-- Status Glow Colors (for badge effects) -->
    <Color x:Key="StatusPassGlowColor">#4D10b981</Color>
    <Color x:Key="StatusFailGlowColor">#4Def4444</Color>
    <Color x:Key="StatusSkipGlowColor">#4Df59e0b</Color>

    <!-- Elevation Glow (for dark theme cards) -->
    <Color x:Key="ElevationGlowColor">#0D00d9ff</Color>
    <Color x:Key="ElevationGlowHoverColor">#1A00d9ff</Color>
    <Color x:Key="ElevationGlowModalColor">#2600d9ff</Color>

    <!-- Focus Ring -->
    <Color x:Key="FocusRingColor">#806366f1</Color>
    <SolidColorBrush x:Key="FocusRing" Color="{StaticResource FocusRingColor}"/>

</ResourceDictionary>
