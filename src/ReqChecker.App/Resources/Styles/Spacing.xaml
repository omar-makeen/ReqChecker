<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- ReqChecker Spacing System -->
    <!-- Based on design-tokens.json specification (8px base unit) -->

    <!-- Spacing Values -->
    <system:Double x:Key="SpacingXs">4</system:Double>
    <system:Double x:Key="SpacingSm">8</system:Double>
    <system:Double x:Key="SpacingMd">12</system:Double>
    <system:Double x:Key="SpacingBase">16</system:Double>
    <system:Double x:Key="SpacingLg">24</system:Double>
    <system:Double x:Key="SpacingXl">32</system:Double>
    <system:Double x:Key="Spacing2xl">48</system:Double>
    <system:Double x:Key="Spacing3xl">64</system:Double>

    <!-- Thickness Values (for Margin/Padding) -->
    <Thickness x:Key="SpacingXsThickness">4</Thickness>
    <Thickness x:Key="SpacingSmThickness">8</Thickness>
    <Thickness x:Key="SpacingMdThickness">12</Thickness>
    <Thickness x:Key="SpacingBaseThickness">16</Thickness>
    <Thickness x:Key="SpacingLgThickness">24</Thickness>
    <Thickness x:Key="SpacingXlThickness">32</Thickness>
    <Thickness x:Key="Spacing2xlThickness">48</Thickness>

    <!-- Horizontal Spacing (left/right only) -->
    <Thickness x:Key="SpacingXsHorizontal">4,0</Thickness>
    <Thickness x:Key="SpacingSmHorizontal">8,0</Thickness>
    <Thickness x:Key="SpacingMdHorizontal">12,0</Thickness>
    <Thickness x:Key="SpacingBaseHorizontal">16,0</Thickness>
    <Thickness x:Key="SpacingLgHorizontal">24,0</Thickness>

    <!-- Vertical Spacing (top/bottom only) -->
    <Thickness x:Key="SpacingXsVertical">0,4</Thickness>
    <Thickness x:Key="SpacingSmVertical">0,8</Thickness>
    <Thickness x:Key="SpacingMdVertical">0,12</Thickness>
    <Thickness x:Key="SpacingBaseVertical">0,16</Thickness>
    <Thickness x:Key="SpacingLgVertical">0,24</Thickness>

    <!-- Border Radius Values -->
    <CornerRadius x:Key="RadiusSm">4</CornerRadius>
    <CornerRadius x:Key="RadiusMd">8</CornerRadius>
    <CornerRadius x:Key="RadiusLg">12</CornerRadius>
    <CornerRadius x:Key="RadiusXl">16</CornerRadius>
    <CornerRadius x:Key="RadiusFull">9999</CornerRadius>

    <!-- Border Thickness -->
    <Thickness x:Key="BorderThin">1</Thickness>
    <Thickness x:Key="BorderDefault">2</Thickness>
    <Thickness x:Key="BorderThick">3</Thickness>

    <!-- Sidebar Dimensions -->
    <system:Double x:Key="SidebarWidthCollapsed">72</system:Double>
    <system:Double x:Key="SidebarWidthExpanded">240</system:Double>
    <system:Double x:Key="SidebarItemHeight">48</system:Double>
    <system:Double x:Key="SidebarIconSize">24</system:Double>
    <system:Double x:Key="SidebarActiveIndicatorWidth">3</system:Double>

    <!-- Progress Ring Dimensions -->
    <system:Double x:Key="ProgressRingSize">120</system:Double>
    <system:Double x:Key="ProgressRingStrokeWidth">8</system:Double>

    <!-- Card Dimensions -->
    <Thickness x:Key="CardPadding">16</Thickness>
    <Thickness x:Key="CardMargin">0,0,0,12</Thickness>

    <!-- Content Area -->
    <system:Double x:Key="ContentMaxWidth">1400</system:Double>
    <Thickness x:Key="ContentPadding">24</Thickness>

    <!-- Status Badge Dimensions -->
    <system:Double x:Key="BadgeHeight">24</system:Double>
    <Thickness x:Key="BadgePadding">12,4</Thickness>

    <!-- Button Dimensions -->
    <system:Double x:Key="ButtonHeightSmall">32</system:Double>
    <system:Double x:Key="ButtonHeightMedium">40</system:Double>
    <system:Double x:Key="ButtonHeightLarge">48</system:Double>
    <Thickness x:Key="ButtonPadding">16,8</Thickness>
    <Thickness x:Key="ButtonPaddingSmall">12,4</Thickness>

    <!-- Icon Sizes -->
    <system:Double x:Key="IconSizeSmall">16</system:Double>
    <system:Double x:Key="IconSizeMedium">20</system:Double>
    <system:Double x:Key="IconSizeLarge">24</system:Double>
    <system:Double x:Key="IconSizeXl">32</system:Double>

</ResourceDictionary>
