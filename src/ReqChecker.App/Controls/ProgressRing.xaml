<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ReqChecker.App.Controls"
             mc:Ignorable="d"
             x:Class="ReqChecker.App.Controls.ProgressRing"
             Width="40"
             Height="40">
    <Grid>
        <Ellipse Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=local:ProgressRing}}"
                 Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=local:ProgressRing}}"
                 Stroke="LightGray"
                 StrokeThickness="3"
                 StrokeDashArray="100"
                 StrokeDashOffset="0"
                 Opacity="0.3" />
        <Ellipse x:Name="ProgressEllipse"
                 Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=local:ProgressRing}}"
                 Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=local:ProgressRing}}"
                 Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=local:ProgressRing}}"
                 StrokeThickness="3"
                 StrokeDashArray="75, 25"
                 StrokeDashOffset="0">
            <Ellipse.RenderTransform>
                <RotateTransform x:Name="RotationTransform"
                                CenterX="20"
                                CenterY="20" />
            </Ellipse.RenderTransform>
        </Ellipse>
    </Grid>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard x:Name="RotationStoryboard" RepeatBehavior="Forever">
                    <DoubleAnimation Storyboard.TargetName="RotationTransform"
                                    Storyboard.TargetProperty="Angle"
                                    From="0"
                                    To="360"
                                    Duration="0:0:1" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>
