<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReqChecker.App.Controls"
        xmlns:core="clr-namespace:ReqChecker.Core.Enums;assembly=ReqChecker.Core"
        x:Class="ReqChecker.App.Controls.TestStatusBadge"
        mc:Ignorable="d"
        Padding="8,4"
        CornerRadius="4"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        MinWidth="60"
        Background="{Binding Status, RelativeSource={RelativeSource AncestorType=local:TestStatusBadge}, Converter={StaticResource TestStatusToColorConverter}}">
    <TextBlock Text="{Binding Status, RelativeSource={RelativeSource AncestorType=local:TestStatusBadge}}"
               Foreground="White"
               FontSize="12"
               FontWeight="SemiBold"
               TextAlignment="Center" />
</Border>
