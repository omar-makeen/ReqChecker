<UserControl x:Class="ReqChecker.App.Controls.LockedFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             Opacity="0.7">
    <Border Background="{DynamicResource BackgroundElevated}"
            BorderBrush="{DynamicResource BorderSubtle}"
            BorderThickness="1"
            CornerRadius="6"
            Padding="10,8"
            ToolTip="This field is locked and cannot be edited">
        <StackPanel Orientation="Horizontal">
            <ui:SymbolIcon Symbol="LockClosed24"
                           FontSize="14"
                           Foreground="{DynamicResource TextTertiary}"
                           Margin="0,0,8,0"
                           VerticalAlignment="Center"/>
            <TextBlock x:Name="ValueTextBlock"
                       Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Foreground="{DynamicResource TextSecondary}"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</UserControl>
