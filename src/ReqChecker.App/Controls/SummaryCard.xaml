<UserControl x:Class="ReqChecker.App.Controls.SummaryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:ReqChecker.App.Controls"
             mc:Ignorable="d"
             x:Name="Root">
    <Border x:Name="CardBorder"
            Background="{DynamicResource BackgroundSurface}"
            BorderBrush="{DynamicResource BorderDefault}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="20"
            MinWidth="140"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect x:Name="GlowEffect"
                              ShadowDepth="0"
                              Direction="0"
                              BlurRadius="0"
                              Opacity="0"
                              Color="{Binding AccentColor, ElementName=Root, FallbackValue=#00d9ff}"/>
        </Border.Effect>
        <Border.Triggers>
            <!-- Hover animation -->
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="GlowEffect"
                                         Storyboard.TargetProperty="BlurRadius"
                                         To="15"
                                         Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <QuadraticEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetName="GlowEffect"
                                         Storyboard.TargetProperty="Opacity"
                                         To="0.3"
                                         Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="GlowEffect"
                                         Storyboard.TargetProperty="BlurRadius"
                                         To="0"
                                         Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="GlowEffect"
                                         Storyboard.TargetProperty="Opacity"
                                         To="0"
                                         Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <StackPanel HorizontalAlignment="Center">
            <!-- Icon -->
            <ui:SymbolIcon x:Name="CardIcon"
                           Symbol="{Binding Icon, ElementName=Root}"
                           FontSize="28"
                           Foreground="{Binding AccentBrush, ElementName=Root}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"
                           Visibility="{Binding ShowIcon, ElementName=Root, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Value -->
            <TextBlock x:Name="ValueText"
                       Text="{Binding Value, ElementName=Root}"
                       Style="{DynamicResource TextDisplay}"
                       Foreground="{Binding AccentBrush, ElementName=Root}"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <!-- Label -->
            <TextBlock x:Name="LabelText"
                       Text="{Binding Label, ElementName=Root}"
                       Style="{DynamicResource TextCaption}"
                       Foreground="{DynamicResource TextSecondary}"
                       FontSize="13"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
