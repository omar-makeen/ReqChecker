<UserControl x:Class="ReqChecker.App.Controls.ExpanderCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:ReqChecker.App.Controls"
             mc:Ignorable="d"
             x:Name="Root">
    <Border x:Name="CardBorder"
            Background="{DynamicResource BackgroundSurface}"
            BorderBrush="{DynamicResource BorderDefault}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="0,0,0,8">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="{DynamicResource AccentPrimary}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header (always visible) -->
            <Button Grid.Row="0"
                    x:Name="HeaderButton"
                    Click="HeaderButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    HorizontalContentAlignment="Stretch"
                    Padding="16,12"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status indicator bar -->
                    <Border Grid.Column="0"
                            Width="4"
                            CornerRadius="2"
                            Margin="0,0,12,0"
                            Background="{Binding StatusBrush, ElementName=Root}"/>

                    <!-- Title and subtitle -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Title, ElementName=Root}"
                                   Style="{DynamicResource TextBody}"
                                   Foreground="{DynamicResource TextPrimary}"
                                   FontWeight="Medium"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Subtitle, ElementName=Root}"
                                   Style="{DynamicResource TextCaption}"
                                   Foreground="{DynamicResource TextTertiary}"
                                   Margin="0,2,0,0"
                                   Visibility="{Binding Subtitle, ElementName=Root, Converter={StaticResource NullToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Status badge -->
                    <local:TestStatusBadge Grid.Column="2"
                                           Status="{Binding Status, ElementName=Root}"
                                           ShowIcon="True"
                                           VerticalAlignment="Center"
                                           Margin="12,0"/>

                    <!-- Expand/collapse chevron -->
                    <ui:SymbolIcon Grid.Column="3"
                                   x:Name="ChevronIcon"
                                   Symbol="ChevronDown24"
                                   FontSize="16"
                                   Foreground="{DynamicResource TextSecondary}"
                                   VerticalAlignment="Center"
                                   RenderTransformOrigin="0.5,0.5">
                        <ui:SymbolIcon.RenderTransform>
                            <RotateTransform x:Name="ChevronRotation" Angle="0"/>
                        </ui:SymbolIcon.RenderTransform>
                    </ui:SymbolIcon>
                </Grid>
            </Button>

            <!-- Expandable content -->
            <Border Grid.Row="1"
                    x:Name="ContentBorder"
                    Background="{DynamicResource BackgroundElevated}"
                    BorderBrush="{DynamicResource BorderSubtle}"
                    BorderThickness="0,1,0,0"
                    Visibility="Collapsed"
                    Opacity="0">
                <Border.RenderTransform>
                    <TranslateTransform Y="-10"/>
                </Border.RenderTransform>

                <StackPanel Margin="16,12">
                    <!-- Human summary -->
                    <TextBlock x:Name="SummaryText"
                               Text="{Binding Summary, ElementName=Root}"
                               Style="{DynamicResource TextBody}"
                               Foreground="{DynamicResource TextSecondary}"
                               TextWrapping="Wrap"
                               Visibility="{Binding Summary, ElementName=Root, Converter={StaticResource NullToVisibilityConverter}}"/>

                    <!-- Metadata section -->
                    <Border Background="{DynamicResource BackgroundBase}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,12,0,0">
                        <Grid>
                            <!-- Accent left border -->
                            <Border Width="4"
                                    HorizontalAlignment="Left"
                                    Margin="-12,0,0,0"
                                    Background="{DynamicResource AccentPrimary}"/>
                            <StackPanel Margin="4,0,0,0">
                                <!-- Duration -->
                                <TextBlock Style="{DynamicResource TextCaption}"
                                           Foreground="{DynamicResource TextTertiary}">
                                    <Run Text="Duration: "/>
                                    <Run Text="{Binding TestDuration, ElementName=Root, Converter={StaticResource DurationFormatConverter}}"/>
                                </TextBlock>
                                <!-- Retry count (only shown when > 1) -->
                                <TextBlock Style="{DynamicResource TextCaption}"
                                           Foreground="{DynamicResource TextTertiary}"
                                           Margin="0,4,0,0"
                                           Visibility="{Binding AttemptCount, ElementName=Root, Converter={StaticResource RetryCountVisibilityConverter}}">
                                    <Run Text="Retries: "/>
                                    <Run Text="{Binding AttemptCount, ElementName=Root}"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Technical details -->
                    <Border x:Name="TechnicalBorder"
                            Background="{DynamicResource BackgroundBase}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,12,0,0"
                            Visibility="{Binding TechnicalDetails, ElementName=Root, Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid>
                            <!-- Accent gradient left border -->
                            <Border Width="4"
                                    HorizontalAlignment="Left"
                                    Margin="-12,0,0,0"
                                    Background="{DynamicResource AccentGradient}"/>
                            <TextBlock Text="{Binding TechnicalDetails, ElementName=Root}"
                                       FontFamily="Cascadia Code,Consolas,Courier New"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondary}"
                                       TextWrapping="Wrap"
                                       Margin="4,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Error message -->
                    <Border x:Name="ErrorBorder"
                            Background="{DynamicResource BackgroundBase}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,12,0,0"
                            Visibility="{Binding ErrorMessage, ElementName=Root, Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid>
                            <!-- Left border color based on ErrorCategory -->
                            <Border Width="4"
                                    HorizontalAlignment="Left"
                                    Margin="-12,0,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{DynamicResource StatusFail}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ErrorCategory, ElementName=Root}" Value="Dependency">
                                                <Setter Property="Background" Value="{DynamicResource AccentPrimary}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            <StackPanel Orientation="Horizontal" Margin="4,0,0,0">
                                <!-- Icon based on ErrorCategory -->
                                <ui:SymbolIcon FontSize="16"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Top">
                                    <ui:SymbolIcon.Style>
                                        <Style TargetType="ui:SymbolIcon">
                                            <Setter Property="Symbol" Value="ErrorCircle24"/>
                                            <Setter Property="Foreground" Value="{DynamicResource StatusFail}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ErrorCategory, ElementName=Root}" Value="Dependency">
                                                    <Setter Property="Symbol" Value="Link24"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentPrimary}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ui:SymbolIcon.Style>
                                </ui:SymbolIcon>
                                <TextBlock Text="{Binding ErrorMessage, ElementName=Root}"
                                           Foreground="{DynamicResource TextSecondary}"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
