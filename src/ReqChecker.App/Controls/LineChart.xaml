<UserControl x:Class="ReqChecker.App.Controls.LineChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ReqChecker.App.Controls"
             mc:Ignorable="d"
             x:Name="Root"
             Width="400"
             Height="200">
    <Grid>
        <!-- Chart canvas for line and points -->
        <Canvas x:Name="ChartCanvas"
                Width="{Binding ActualWidth, ElementName=Root}"
                Height="{Binding ActualHeight, ElementName=Root}"
                ClipToBounds="False"/>
    </Grid>
</UserControl>
